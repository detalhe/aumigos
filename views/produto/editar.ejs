<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Produto</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .btn-primary {
            background-color: #f5b942;
            border-color: #f5b942;
        }

        .btn-primary:hover {
            background-color: #ffaa00;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1 class="mt-5 mb-4">Editar Produto</h1>
        <form id="editarProdutoForm" action="/produtos/<%= produto.id %>/atualizar" method="POST" class="needs-validation" novalidate>
            <div class="form-group">
                <label for="nome">Nome:</label>
                <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome" value="<%= produto.nome %>" required>
                <div class="invalid-feedback">Por favor, insira o nome do produto.</div>
            </div>
            <div class="form-group">
                <label for="categoria">Categoria:</label>
                <select id="categoria" name="categoria" class="form-control custom-select" required>
                    <option value="">Selecione a categoria</option>
                    <option value="alimentos" <%=produto.categoria==='alimentos' ? 'selected' : '' %>>Alimentos</option>
                    <option value="higiene" <%=produto.categoria==='higiene' ? 'selected' : '' %>>Higiene</option>
                    <option value="limpeza" <%=produto.categoria==='limpeza' ? 'selected' : '' %>>Limpeza</option>
                    <option value="outros" <%=produto.categoria==='outros' ? 'selected' : '' %>>Outros</option>
                </select>
                <div class="invalid-feedback">Por favor, selecione a categoria do produto.</div>
            </div>
            <div class="form-group">
                <label for="quantidade">Quantidade:</label>
                <input type="number" class="form-control" id="quantidade" name="quantidade" placeholder="Quantidade" value="<%= produto.quantidade %>" required>
                <div class="invalid-feedback">Por favor, insira a quantidade do produto.</div>
            </div>
            <div class="form-group">
                <label for="unidadeMedida">Unidade de Medida:</label>
                <select id="unidadeMedida" name="unidadeMedida" class="form-control custom-select" required>
                    <option value="">Selecione a unidade de medida</option>
                    <option value="unidades" <%=produto.unidade_medida==='unidades' ? 'selected' : '' %>>Unidades</option>
                    <option value="kg" <%=produto.unidade_medida==='kg' ? 'selected' : '' %>>Kg</option>
                    <option value="litros" <%=produto.unidade_medida==='litros' ? 'selected' : '' %>>Litros</option>
                    <option value="outros" <%=produto.unidade_medida==='outros' ? 'selected' : '' %>>Outros</option>
                </select>
                <div class="invalid-feedback">Por favor, selecione a unidade de medida do produto.</div>
            </div>
            <div class="form-group">
                <label for="dataValidade">Data de Validade:</label>
                <input type="date" class="form-control" id="dataValidade" name="dataValidade" value="<%= produto.data_validade ? produto.data_validade.toISOString().slice(0, 10) : '' %>" required>
                <div class="invalid-feedback">Por favor, insira a data de validade do produto.</div>
            </div>
            <button type="submit" class="btn btn-primary">Atualizar</button>
        </form>
    </div>

    <script>
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();

        document.getElementById('editarProdutoForm').addEventListener('submit', function (event) {
            var nome = document.getElementById('nome');
            var categoria = document.getElementById('categoria');
            var quantidade = document.getElementById('quantidade');
            var unidade_medida = document.getElementById('unidade_medida');
            var data_validade = document.getElementById('data_validade');

            var isValid = true;

            if (nome.value === '') {
                nome.classList.add('is-invalid');
                isValid = false;
            } else {
                nome.classList.remove('is-invalid');
            }

            if (categoria.value === '') {
                categoria.classList.add('is-invalid');
                isValid = false;
            } else {
                categoria.classList.remove('is-invalid');
            }

            if (quantidade.value === '') {
                quantidade.classList.add('is-invalid');
                isValid = false;
            } else {
                quantidade.classList.remove('is-invalid');
            }

            if (unidade_medida.value === '') {
                unidade_medida.classList.add('is-invalid');
                isValid = false;
            } else {
                unidade_medida.classList.remove('is-invalid');
            }

            if (data_validade.value === '') {
                data_validade.classList.add('is-invalid');
                isValid = false;
            } else {
                data_validade.classList.remove('is-invalid');
            }

            if (!isValid) {
                event.preventDefault();
                event.stopPropagation();
            }
        });
    </script>
</body>

</html>