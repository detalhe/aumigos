<div class="container">
    <h1 class="my-4">Editar Empresa Parceira</h1>

    <form action="/empresas-parceiras/<%= empresa.id %>/atualizar" method="POST">
        <div class="mb-3">
            <label for="nome" class="form-label">Nome:</label>
            <input type="text" id="nome" name="nome" class="form-control" value="<%= empresa.nome %>" required>
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">Email:</label>
            <input type="email" id="email" name="email" class="form-control" value="<%= empresa.email %>" required>
        </div>

        <div class="mb-3">
            <label for="telefone" class="form-label">Telefone:</label>
            <input type="tel" id="telefone" name="telefone" class="form-control" value="<%= empresa.telefone %>" required>
        </div>

        <div class="mb-3">
            <label for="website" class="form-label">Website:</label>
            <input type="url" id="website" name="website" class="form-control" value="<%= empresa.website %>">
        </div>

        <div class="mb-3">
            <label for="tipoParceria" class="form-label">Tipo de Parceria:</label>
            <select id="tipoParceria" name="tipoParceria" class="form-select" required>
                <option value="patrocinio" <%=empresa.tipo_parceria==='patrocinio' ? 'selected' : '' %>>Patrocínio</option>
                <option value="doacao" <%=empresa.tipo_parceria==='doacao' ? 'selected' : '' %>>Doação</option>
                <option value="voluntariado" <%=empresa.tipo_parceria==='voluntariado' ? 'selected' : '' %>>Voluntariado</option>
                <option value="outros" <%=empresa.tipo_parceria==='outros' ? 'selected' : '' %>>Outros</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Atualizar</button>
    </form>
</div>