<div class="container">
    <h1 class="my-4">Editar Animal</h1>

    <form action="/animais/<%= animal.id %>/atualizar" method="POST">
        <div class="mb-3">
            <label for="nome" class="form-label">Nome:</label>
            <input type="text" id="nome" name="nome" class="form-control" value="<%= animal.nome %>" required>
        </div>

        <div class="mb-3">
            <label for="tipo" class="form-label">Tipo:</label>
            <select id="tipo" name="tipo" class="form-select" required>
                <option value="cachorro" <%=animal.tipo==='cachorro' ? 'selected' : '' %>>Cachorro</option>
                <option value="gato" <%=animal.tipo==='gato' ? 'selected' : '' %>>Gato</option>
                <option value="passaro" <%=animal.tipo==='passaro' ? 'selected' : '' %>>Pássaro</option>
                <option value="outros" <%=animal.tipo==='outros' ? 'selected' : '' %>>Outros</option>
            </select>
        </div>

        <div class="mb-3">
            <label for="sexo" class="form-label">Sexo:</label>
            <select id="sexo" name="sexo" class="form-select" required>
                <option value="macho" <%=animal.sexo==='macho' ? 'selected' : '' %>>Macho</option>
                <option value="femea" <%=animal.sexo==='femea' ? 'selected' : '' %>>Fêmea</option>
            </select>
        </div>

        <div class="mb-3">
            <label for="porte" class="form-label">Porte:</label>
            <select id="porte" name="porte" class="form-select" required>
                <option value="pequeno" <%=animal.porte==='pequeno' ? 'selected' : '' %>>Pequeno</option>
                <option value="medio" <%=animal.porte==='medio' ? 'selected' : '' %>>Médio</option>
                <option value="grande" <%=animal.porte==='grande' ? 'selected' : '' %>>Grande</option>
            </select>
        </div>

        <div class="mb-3">
            <label for="temperamento" class="form-label">Temperamento:</label>
            <select id="temperamento" name="temperamento" class="form-select" required>
                <option value="amigavel" <%=animal.temperamento==='amigavel' ? 'selected' : '' %>>Amigável</option>
                <option value="reservado" <%=animal.temperamento==='reservado' ? 'selected' : '' %>>Reservado</option>
                <option value="agressivo" <%=animal.temperamento==='agressivo' ? 'selected' : '' %>>Agressivo</option>
            </select>
        </div>

        <div class="mb-3">
            <label for="status" class="form-label">Status:</label>
            <select id="status" name="status" class="form-select" required>
                <option value="disponivel" <%=animal.status==='disponivel' ? 'selected' : '' %>>Disponível</option>
                <option value="adotado" <%=animal.status==='adotado' ? 'selected' : '' %>>Adotado</option>
                <option value="em-tratamento" <%=animal.status==='em-tratamento' ? 'selected' : '' %>>Em Tratamento</option>
            </select>
        </div>

        <div class="mb-3">
            <label for="descricao" class="form-label">Descrição:</label>
            <textarea id="descricao" name="descricao" class="form-control" rows="4"><%= animal.descricao %></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Atualizar</button>
    </form>
</div>