<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastrar Animal</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .btn-primary {
            background-color: #f5b942;
            border-color: #f5b942;
        }

        .btn-primary:hover {
            background-color: #ffaa00;
        }
    </style>
</head>

<div class="container">
    <h1 class="mt-5 mb-4">Cadastro de Animais</h1>
    <form id="cadastrarAnimalForm" action="/animais" method="POST" class="needs-validation" novalidate>
        <div class="form-group">
            <label for="nome">Nome:</label>
            <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome" required>
            <div class="invalid-feedback">Por favor, insira o nome do animal.</div>
        </div>
        <div class="form-group">
            <label for="tipo">Tipo:</label>
            <select id="tipo" name="tipo" class="form-control custom-select" required>
                <option value="">Selecione o tipo</option>
                <option value="cachorro">Cachorro</option>
                <option value="gato">Gato</option>
                <option value="passaro">Pássaro</option>
                <option value="outros">Outros</option>
            </select>
            <div class="invalid-feedback">Por favor, selecione o tipo do animal.</div>
        </div>
        <div class="form-group">
            <label for="sexo">Sexo:</label>
            <select id="sexo" name="sexo" class="form-control custom-select" required>
                <option value="">Selecione o sexo</option>
                <option value="macho">Macho</option>
                <option value="femea">Fêmea</option>
            </select>
            <div class="invalid-feedback">Por favor, selecione o sexo do animal.</div>
        </div>
        <div class="form-group">
            <label for="porte">Porte:</label>
            <select id="porte" name="porte" class="form-control custom-select" required>
                <option value="">Selecione o porte</option>
                <option value="pequeno">Pequeno</option>
                <option value="medio">Médio</option>
                <option value="grande">Grande</option>
            </select>
            <div class="invalid-feedback">Por favor, selecione o porte do animal.</div>
        </div>
        <div class="form-group">
            <label for="temperamento">Temperamento:</label>
            <select id="temperamento" name="temperamento" class="form-control custom-select" required>
                <option value="">Selecione o temperamento</option>
                <option value="amigavel">Amigável</option>
                <option value="reservado">Reservado</option>
                <option value="agressivo">Agressivo</option>
            </select>
            <div class="invalid-feedback">Por favor, selecione o temperamento do animal.</div>
        </div>
        <div class="form-group">
            <label for="status">Status:</label>
            <select id="status" name="status" class="form-control custom-select" required>
                <option value="">Selecione o status</option>
                <option value="disponivel">Disponível</option>
                <option value="adotado">Adotado</option>
                <option value="em-tratamento">Em Tratamento</option>
            </select>
            <div class="invalid-feedback">Por favor, selecione o status do animal.</div>
        </div>
        <div class="form-group">
            <label for="descricao">Descrição:</label>
            <textarea id="descricao" name="descricao" class="form-control" rows="4" placeholder="Descrição" required></textarea>
            <div class="invalid-feedback">Por favor, insira uma descrição para o animal.</div>
        </div>
        <button type="submit" class="btn btn-primary">Cadastrar</button>
    </form>
</div>

<script>
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            var forms = document.getElementsByClassName('needs-validation');
            var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();

    document.getElementById('cadastrarAnimalForm').addEventListener('submit', function (event) {
        var tipo = document.getElementById('tipo');
        var sexo = document.getElementById('sexo');
        var porte = document.getElementById('porte');
        var temperamento = document.getElementById('temperamento');
        var status = document.getElementById('status');

        if (tipo.value === '' || sexo.value === '' || porte.value === '' || temperamento.value === '' || status.value === '') {
            event.preventDefault();
            event.stopPropagation();

            if (tipo.value === '') {
                tipo.classList.add('is-invalid');
            }
            if (sexo.value === '') {
                sexo.classList.add('is-invalid');
            }
            if (porte.value === '') {
                porte.classList.add('is-invalid');
            }
            if (temperamento.value === '') {
                temperamento.classList.add('is-invalid');
            }
            if (status.value === '') {
                status.classList.add('is-invalid');
            }
        }
    });
</script>